<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

  <style name="FSFont">
    <item name="android:fontFamily">sans-serif</item>
  </style>

  <style name="FSFont.Reg" />

  <style name="FSFont.Bold">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="FSFont.Reg.RowItem"><!-- Sources -->
    <item name="android:textColor">@android:color/black</item>
    <item name="android:textSize">15sp</item>
  </style>

  <style name="NameText" parent="FSFont.Reg.RowItem">
    <item name="android:textColor">@color/gray_100</item>
  </style>

  <style name="NameText.Bold">
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="NameText.Single">
    <item name="android:singleLine">true</item>
    <item name="android:maxLines">1</item>
    <item name="android:ellipsize">middle</item>
  </style>

  <style name="FSFont.Reg.RowItem.Clickable"><!-- Person's name, death date, etc. -->
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">1</item>
    <item name="android:textStyle">normal</item>
  </style>

  <style name="LifeSpanText" parent="FSFont.Reg.RowItem.Clickable">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">12sp</item>
    <item name="android:paddingTop">2dp</item>
    <item name="android:textColor">@color/gray_70</item>
  </style>

  <style name="OtherText.Small" parent="LifeSpanText">
    <item name="android:textSize">10sp</item>
  </style>

  <style name="LifeSpanText.Light">
    <item name="android:textColor">@color/gray_60</item>
  </style>

  <style name="DateText.Dark" parent="LifeSpanText">
    <item name="android:textColor">@color/gray_90</item>
  </style>

  <style name="PidText" parent="LifeSpanText">
    <item name="android:paddingLeft">10dp</item>
  </style>

  <style name="PidText.Light">
    <item name="android:textColor">@color/gray_60</item>
  </style>

</resources>
